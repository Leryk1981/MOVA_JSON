{
  "name": "leryk-cli-mova",
  "version": "0.1.0",
  "description": "MOVA CLI: validate, schema:sync, snippet:generate commands",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "mova": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "echo 'CLI tests'",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "author": {
    "name": "Sergii Miasoiedov",
    "email": "contact@mova.io"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "leryk-sdk-mova": "0.1.0",
    "cac": "^6.7.14"
  },
  "devDependencies": {
    "@types/node": "file:../types-node",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
