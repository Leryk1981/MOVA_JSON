{
  "name": "@mova/sdk",
  "version": "0.1.0",
  "description": "MOVA SDK: AJV validator, diagnostics mapper, completion suggestions, utilities",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "mocha 'dist/**/*.test.js' --loader=esmock",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "jsonc-parser": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
